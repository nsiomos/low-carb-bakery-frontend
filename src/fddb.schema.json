{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/output/schema#",
  "description": "nicolesiomos.com low-carb bakery fddb schema",
  "default": null,
  "type": "object",
  "definitions": {
    "pointer": {
      "type": "string",
      "pattern": "^((/|./|../)*[a-z-]*)*$"
    },
    "name": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}_[A-Z]{2}$": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["en_GB", "de_DE"]
    },
    "shop": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/name" },
        "url": { "type": ["string", "null"] },
        "purchaseLocal": { "type": "boolean" },
        "purchaseOnline": { "type": "boolean" }
      },
      "required": ["name", "url", "purchaseLocal", "purchaseOnline"],
      "additionalProperties": false
    },
    "ingredient": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/name" }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "purchaseSourceFlag": {
      "type": "string",
      "enum": ["VERIFY", "INCOMPLETE"]
    },
    "purchaseSource": {
      "type": "object",
      "properties": {
        "weight": { "type": "number" },
        "amount": { "type": "number" },
        "price": { "type": "number" },
        "shop": { "$ref": "#/definitions/pointer" },
        "url": { "type": ["string", "null"] },
        "flags": {
          "type": "array",
          "items": { "$ref": "#/definitions/purchaseSourceFlag" },
          "uniqueItems": true
        }
      },
      "required": ["weight", "amount", "price", "shop", "url"],
      "additionalProperties": false
    },
    "purchase": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": { "$ref": "#/definitions/purchaseSource" },
          "minItems": 1
        }
      },
      "required": ["sources"],
      "additionalProperties": false
    },
    "fatDetails": {
      "type": "object",
      "properties": {
        "saturates": { "type": "number" }
      },
      "required": ["saturates"],
      "additionalProperties": false
    },
    "carbohydratesDetails": {
      "type": "object",
      "properties": {
        "sugars": { "type": "number" },
        "polyols": { "type": ["number", "null"] }
      },
      "required": ["sugars", "polyols"],
      "additionalProperties": false
    },
    "nutrientValues": {
      "type": "object",
      "properties": {
        "energy": { "type": "number" },
        "fat": {
          "type": "array",
          "items": [
            { "type": "number" },
            { "$ref": "#/definitions/fatDetails" }
          ],
          "minItems": 2,
          "additionalItems": false
        },
        "protein": { "type": "number" },
        "carbohydrates": {
          "type": "array",
          "items": [
            { "type": "number" },
            { "$ref": "#/definitions/carbohydratesDetails" }
          ],
          "minItems": 2,
          "additionalItems": false
        },
        "fibres": { "type": ["number", "null"] },
        "sodium": { "type": "number" }
      },
      "required": [
        "energy",
        "fat",
        "protein",
        "carbohydrates",
        "fibres",
        "sodium"
      ],
      "additionalProperties": false
    },
    "nutrientsTrait": {
      "type": "string",
      "enum": ["GLUTEN", "LACTOSE", "ANIMAL_PRODUCT", "MEAT"]
    },
    "nutrients": {
      "type": "object",
      "properties": {
        "values": { "$ref": "#/definitions/nutrientValues" },
        "ingredients": {
          "type": "array",
          "items": [
            {
              "type": "array",
              "items": { "$ref": "#/definitions/pointer" },
              "minItems": 1
            },
            { "type": "array", "items": { "$ref": "#/definitions/pointer" } }
          ],
          "minItems": 2,
          "additionalItems": false
        },
        "traits": {
          "type": "array",
          "items": { "$ref": "#/definitions/nutrientsTrait" },
          "uniqueItems": true
        }
      },
      "required": ["values", "ingredients", "traits"],
      "additionalProperties": false
    },
    "product": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/name" },
        "purchase": { "$ref": "#/definitions/purchase" },
        "nutrients": { "$ref": "#/definitions/nutrients" },
        "nutrientsRef": { "$ref": "#/definitions/pointer" }
      },
      "oneOf": [
        { "required": ["name", "purchase", "nutrients"] },
        { "required": ["name", "purchase", "nutrientsRef"] }
      ],
      "additionalProperties": false
    },
    "recipe": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/name" },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "array",
            "items": [
              { "$ref": "#/definitions/pointer" },
              { "type": "number" }
            ],
            "minItems": 2,
            "additionalItems": false
          },
          "minItems": 1
        }
      },
      "required": ["name", "ingredients"],
      "additionalProperties": false
    }
  },
  "properties": {
    "shops": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": { "$ref": "#/definitions/shop" }
      },
      "additionalProperties": false
    },
    "ingredients": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": { "$ref": "#/definitions/ingredient" }
      },
      "additionalProperties": false
    },
    "products": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": { "$ref": "#/definitions/product" }
      },
      "additionalProperties": false
    },
    "recipes": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": { "$ref": "#/definitions/recipe" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["shops", "ingredients", "products", "recipes"]
}
